<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="120dp"
    android:layout_height="90dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_centerHorizontal="true"
    android:padding="5dp"
    android:id="@+id/btnLargeDelivery"
    android:background="@drawable/bg_delivery_btn"
    android:layout_gravity="center"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_large_package" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:layout_gravity="center_horizontal"
        android:text="Large Delivery"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:text="Up To 15 kg"
        android:textAlignment="center"
        android:textSize="8sp" />

</LinearLayout>